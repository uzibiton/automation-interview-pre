{
  "name": "automation-tests",
  "version": "1.0.0",
  "description": "E2E and integration tests for expense tracking application",
  "private": true,
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "jest --config=jest.config.js --selectProjects unit",
    "test:component": "jest --config=jest.config.js --selectProjects component",
    "test:integration": "jest --config=jest.config.js --selectProjects integration",
    "test:contract": "jest --config=jest.config.js --selectProjects contract",
    "test:watch": "jest --config=jest.config.js --watch",
    "test:coverage": "jest --config=jest.config.js --coverage --selectProjects unit component",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:e2e:headed": "playwright test --config=playwright.config.ts --headed",
    "test:e2e:debug": "playwright test --config=playwright.config.ts --debug",
    "test:e2e:local": "cross-env TEST_ENV=local playwright test --config=playwright.config.ts",
    "test:e2e:docker": "cross-env TEST_ENV=docker playwright test --config=playwright.config.ts",
    "test:e2e:staging": "cross-env TEST_ENV=staging playwright test --config=playwright.config.ts",
    "test:e2e:production": "cross-env TEST_ENV=production playwright test --config=playwright.config.ts",
    "test:smoke": "playwright test --config=playwright.config.ts --grep @smoke",
    "test:e2e:smoke": "playwright test --config=playwright.config.ts --grep @smoke",
    "report:open": "playwright show-report",
    "postinstall": "echo 'Skipping Playwright install. Run npm run install:browsers when needed.'",
    "install:browsers": "npx playwright install --with-deps"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.11",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "i18next": "^25.7.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "zustand": "^5.0.9"
  }
}
