{
  "name": "expense-tracker-tests",
  "version": "1.0.0",
  "description": "Comprehensive testing infrastructure for Expense Tracker application",
  "scripts": {
    "test": "npm run test:all",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --config=jest.config.js --testPathPattern=unit",
    "test:component": "jest --config=jest.config.js --testPathPattern=component",
    "test:integration": "jest --config=jest.config.js --testPathPattern=integration",
    "test:contract": "jest --config=jest.config.js --testPathPattern=contract",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:e2e:headed": "playwright test --config=playwright.config.ts --headed",
    "test:e2e:debug": "playwright test --config=playwright.config.ts --debug",
    "test:cucumber": "cucumber-js --config=cucumber.config.js",
    "test:visual": "playwright test --config=playwright.config.ts --grep @visual",
    "test:accessibility": "playwright test --config=playwright.config.ts --grep @a11y",
    "test:smoke": "jest --testPathPattern='.*\\.(test|spec)\\.(ts|tsx)$' --grep='@smoke'",
    "test:sanity": "jest --testPathPattern='.*\\.(test|spec)\\.(ts|tsx)$' --grep='@sanity'",
    "test:regression": "jest --testPathPattern='.*\\.(test|spec)\\.(ts|tsx)$' --grep='@regression'",
    "test:critical": "jest --testPathPattern='.*\\.(test|spec)\\.(ts|tsx)$' --grep='@critical'",
    "test:nightly": "npm run test:all && npm run test:performance && npm run test:security",
    "test:performance": "k6 run ../non-functional/performance/k6/load-test.js",
    "test:security": "python3 ../non-functional/security/zap/zap_scan.py",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "jest --coverage && open coverage/lcov-report/index.html",
    "playwright:install": "playwright install --with-deps",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "report:open": "playwright show-report",
    "report:allure": "allure serve ../reports/allure-results"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@pact-foundation/pact": "^12.1.0",
    "@playwright/test": "^1.40.1",
    "@storybook/addon-a11y": "^7.6.3",
    "@storybook/addon-essentials": "^7.6.3",
    "@storybook/addon-interactions": "^7.6.3",
    "@storybook/addon-links": "^7.6.3",
    "@storybook/react": "^7.6.3",
    "@storybook/react-vite": "^7.6.3",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "allure-commandline": "^2.25.0",
    "allure-playwright": "^2.10.0",
    "axe-core": "^4.8.3",
    "axe-playwright": "^1.2.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "lighthouse": "^11.4.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "testing",
    "jest",
    "playwright",
    "cucumber",
    "bdd",
    "e2e",
    "integration",
    "unit",
    "contract",
    "visual-regression",
    "performance",
    "security",
    "accessibility"
  ],
  "author": "Uzi Biton",
  "license": "MIT"
}
