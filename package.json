{
  "name": "automation-interview-pre",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "app/services/auth-service",
    "app/services/api-service",
    "app/frontend"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev": "concurrently -n \"AUTH,API,FRONTEND\" -c \"blue,green,yellow\" \"npm run dev:auth\" \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:auth": "npm run start:dev --workspace=auth-service",
    "dev:api": "npm run start:dev --workspace=api-service",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build:all": "npm run build --workspaces",
    "clean": "npm run clean:modules && npm run clean:build",
    "clean:modules": "rm -rf node_modules app/services/*/node_modules app/frontend/node_modules",
    "clean:build": "rm -rf app/services/*/dist app/frontend/dist",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "db:start": "docker-compose up postgres -d",
    "db:stop": "docker-compose stop postgres",
    "db:reset": "docker-compose down -v && docker-compose up postgres -d",
    "test:e2e": "npm run test:e2e --workspace=tests",
    "test:e2e:headed": "npm run test:e2e:headed --workspace=tests",
    "test:e2e:debug": "npm run test:e2e:debug --workspace=tests",
    "test:e2e:local": "npm run test:e2e:local --workspace=tests",
    "test:e2e:docker": "npm run test:e2e:docker --workspace=tests",
    "test:e2e:staging": "npm run test:e2e:staging --workspace=tests",
    "test:e2e:production": "npm run test:e2e:production --workspace=tests",
    "test:smoke": "npm run test:smoke --workspace=tests",
    "report:open": "npm run report:open --workspace=tests"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@google-cloud/firestore": "^8.0.0"
  }
}
