{
  "name": "automation-interview-pre",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "app/services/auth-service",
    "app/services/api-service",
    "app/frontend"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev": "concurrently -n \"AUTH,API,FRONTEND\" -c \"blue,green,yellow\" \"npm run dev:auth\" \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:auth": "npm run start:dev --workspace=auth-service",
    "dev:api": "npm run start:dev --workspace=api-service",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build:all": "npm run build --workspaces",
    "clean": "npm run clean:modules && npm run clean:build",
    "clean:modules": "rm -rf node_modules app/services/*/node_modules app/frontend/node_modules",
    "clean:build": "rm -rf app/services/*/dist app/frontend/dist",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "db:start": "docker-compose up postgres -d",
    "db:stop": "docker-compose stop postgres",
    "db:reset": "docker-compose down -v && docker-compose up postgres -d",
    "test:e2e": "npm run test:e2e --workspace=tests",
    "test:e2e:headed": "npm run test:e2e:headed --workspace=tests",
    "test:e2e:debug": "npm run test:e2e:debug --workspace=tests",
    "test:e2e:local": "npm run test:e2e:local --workspace=tests",
    "test:e2e:docker": "npm run test:e2e:docker --workspace=tests",
    "test:e2e:staging": "npm run test:e2e:staging --workspace=tests",
    "test:e2e:production": "npm run test:e2e:production --workspace=tests",
    "test:smoke": "npm run test:smoke --workspace=tests",
    "test:unit": "npm run test:unit --workspace=tests",
    "test:coverage": "npm run test:coverage --workspace=tests",
    "report:open": "npm run report:open --workspace=tests",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "lint": "eslint \"app/**/*.{js,ts,tsx}\" \"tests/**/*.{js,ts,tsx}\" \"tools/**/*.js\" --ignore-pattern \"tests/reports/**\"",
    "lint:fix": "eslint \"app/**/*.{js,ts,tsx}\" \"tests/**/*.{js,ts,tsx}\" \"tools/**/*.js\" --ignore-pattern \"tests/reports/**\" --fix",
    "type-check": "npm run type-check --workspaces --if-present",
    "seed:postgres": "node tools/seed-postgres-test-data.js",
    "seed:firestore": "node tools/seed-firestore-test-data.js",
    "seed:all": "node tools/seed-all-environments.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@google-cloud/firestore": "^8.0.0",
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "bcrypt": "^6.0.0",
    "pg": "^8.16.3"
  }
}
