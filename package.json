{
  "name": "automation-interview-pre",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/auth-service",
    "services/api-service",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev": "concurrently -n \"AUTH,API,FRONTEND\" -c \"blue,green,yellow\" \"npm run dev:auth\" \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:auth": "npm run start:dev --workspace=auth-service",
    "dev:api": "npm run start:dev --workspace=api-service",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build:all": "npm run build --workspaces",
    "clean": "npm run clean:modules && npm run clean:build",
    "clean:modules": "rm -rf node_modules services/*/node_modules frontend/node_modules",
    "clean:build": "rm -rf services/*/dist frontend/dist",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "db:start": "docker-compose up postgres -d",
    "db:stop": "docker-compose stop postgres",
    "db:reset": "docker-compose down -v && docker-compose up postgres -d",
    "test:e2e": "playwright test --config=tests/config/playwright.config.ts",
    "test:e2e:headed": "playwright test --config=tests/config/playwright.config.ts --headed",
    "test:e2e:debug": "playwright test --config=tests/config/playwright.config.ts --debug",
    "test:e2e:local": "cross-env TEST_ENV=local playwright test --config=tests/config/playwright.config.ts",
    "test:e2e:local:headed": "cross-env TEST_ENV=local playwright test --config=tests/config/playwright.config.ts --headed",
    "test:e2e:local:debug": "cross-env TEST_ENV=local playwright test --config=tests/config/playwright.config.ts --debug",
    "test:e2e:docker": "cross-env TEST_ENV=docker playwright test --config=tests/config/playwright.config.ts",
    "test:e2e:docker:headed": "cross-env TEST_ENV=docker playwright test --config=tests/config/playwright.config.ts --headed",
    "test:e2e:docker:debug": "cross-env TEST_ENV=docker playwright test --config=tests/config/playwright.config.ts --debug",
    "test:e2e:staging": "cross-env TEST_ENV=staging playwright test --config=tests/config/playwright.config.ts",
    "test:e2e:staging:headed": "cross-env TEST_ENV=staging playwright test --config=tests/config/playwright.config.ts --headed",
    "test:e2e:staging:debug": "cross-env TEST_ENV=staging playwright test --config=tests/config/playwright.config.ts --debug",
    "test:e2e:staging:smoke": "cross-env TEST_ENV=staging playwright test --config=tests/config/playwright.config.ts --grep @smoke",
    "test:e2e:production": "cross-env TEST_ENV=production playwright test --config=tests/config/playwright.config.ts",
    "test:e2e:production:headed": "cross-env TEST_ENV=production playwright test --config=tests/config/playwright.config.ts --headed",
    "test:e2e:production:debug": "cross-env TEST_ENV=production playwright test --config=tests/config/playwright.config.ts --debug",
    "test:e2e:production:smoke": "cross-env TEST_ENV=production playwright test --config=tests/config/playwright.config.ts --grep @smoke",
    "report:open": "playwright show-report",
    "report:latest": "playwright show-report $(ls -t tests/reports/*/html-report | head -1)"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
